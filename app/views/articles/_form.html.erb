<% if @article.errors.any?%>
		<% @article.errors.full_messages.each do |msg|%>
		<!-- show errors -->
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
    <% end %>
<%= form_for @article do |f| %>
<p><%= f.label :title%>
	<%= f.text_field :title %>
 </p>
 <p>
 	<%= f.label :description%>
 	<%= f.text_area :description%>
 </p>
 <p>
 <%= f.submit :submit%>	
 </p>
<% end %>

