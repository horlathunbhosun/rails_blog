<%= render 'shared/errors',  obj: @article %>
<div class="row">
   <div class="col-md-12">
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
        <%= f.label :title%>
        </div>
        <div class="col-sm-8">
           <%= f.text_field :title , class: 'form-control', placeholder:'Title of the articles here', autofocus:true , require: 'required' %>
        </div>
      </div>
<!--       <p style="color:red; text-align:left; margin-left: 15em; opacity: 9">*Upload an of image  axy dimension*</p>-->
<!--       <div class="form-group">-->
