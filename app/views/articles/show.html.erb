<div class="row">
  <div class="col-sm-8">
   <h1><%= @article.title %></h1>
    <p class="lead">
      <small>
<!--        Created by: <%#= @article.user.username if @article.user %>-->
       <small><span class="fa fa-clock-o"></span> <%= time_ago_in_words(@article.created_at) %> ago </small>
        <small>Last updated: <%= time_ago_in_words(@article.updated_at) %> ago</small>

      </small>
    </p>
    <hr>

    <p> <%= @article.user.username if @article.user %> </p>
    <hr>

    <%#= image_tag @article.image.url, width:'500px', height:'200px', :class => 'img-responsive' %>

    <hr>
    <p><%= simple_format(@article.description) %></p>
    <% if @article.categories.any? %>
      <p>Categories: <%= render @article.categories %></p>
    <% end %>
  </div>

    <div class="col-sm-4">
      <!-- Search Widget -->
      <div class="panel panel-default">
        <div class="panel-heading">Search</div>
        <div class="panel-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
          </div>
        </div>
      </div>

      <!-- Categories Widget -->
      <div class="panel panel-default">
        <div class="panel-heading">Categories</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <%# @categories.each do |category|  %>
<!--                <li>-->
                  <%#= link_to "#{category.name}", category_path(category) %>
<!--                </li>-->
                  <%# end %>
              </ul>
            </div>

          </div>
        </div>
      </div>



</div>

</div>
  <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <div class="article-action">
        <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-xs btn-primary'%>
        <%= link_to "Delete this article", article_path(@article), method: :delete,
                                           :data=>{confirm: "Are you sure you want to delete this article?"},
                                            class: 'btn btn-xs btn-danger' %>
      <% end   %>
        <%= link_to "View All Articles", articles_path, class: 'btn btn-xs btn-success' %>
    </div>

