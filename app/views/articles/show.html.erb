<!--<%#= link_to "Edit this article", edit_article_path(@article)%> | <%#= link_to "View ALl Articles", articles_path %>-->

<div class="row">
  <div class="col-sm-8">
   <h1><%= @article.title %></h1>
    <p class="lead">
      by
      <a href="#">someone</a>
      <small>
        Created by: <%= @article.user.username if @article.user %>
        <span class="fa fa-clock-o"></span> <%= time_ago_in_words(@article.created_at) %> ago ,
        Last updated: <%= time_ago_in_words(@article.updated_at) %> ago

      </small>
    </p>
    <hr>

    <p> Posted by this person </p>
    <hr>

    <%= image_tag @article.image.url, width:'500px', height:'200px', :class => 'img-responsive' %>

    <hr>
    <p><%= simple_format(@article.description) %></p>
  </div>

    <div class="col-sm-4">
      <!-- Search Widget -->
      <div class="panel panel-default">
        <div class="panel-heading">Search</div>
        <div class="panel-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
          </div>
        </div>
      </div>

      <!-- Categories Widget -->
      <div class="panel panel-default">
        <div class="panel-heading">Categories</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">Web Design</a>
                </li>
                <li>
                  <a href="#">HTML</a>
                </li>
                <li>
                  <a href="#">Freebies</a>
                </li>
              </ul>
            </div>
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">JavaScript</a>
                </li>
                <li>
                  <a href="#">CSS</a>
                </li>
                <li>
                  <a href="#">Tutorials</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>



</div>

</div>
    <div class="article-action">
        <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-xs btn-primary'%>
        <%= link_to "Delete this article", article_path(@article), method: :delete,
                                           :data=>{confirm: "Are you sure you want to delete this article?"},
                                            class: 'btn btn-xs btn-danger' %>
        <%= link_to "View All Articles", articles_path, class: 'btn btn-xs btn-success' %>
    </div>

