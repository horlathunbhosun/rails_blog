<h1 align="center">All Categories</h1>
<div class="row">
  <% @categories.each do |category|%>
    <div class="col-md-3">
      <div class="thumbnail">

        <div class="caption">
          <h3 class="article-title"></h3>
          <div align="center">
           <h3> <%= link_to "#{category.name}", category_path(category) %> </h3>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div align="center">
  <div class="digg_pagination ">
    <div class="page_info">
      <%= page_entries_info @category %>
    </div>
    <div style="padding-left: 450px;" ><%= will_paginate @category, :container => false %></div>
  </div>