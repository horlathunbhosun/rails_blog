<h1 align="center"><%= "Category: " + @category.name %></h1>
<% if logged_in? && current_user.admin? %>
<div class="row" align="center">
  <span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category) %></span>
</div>
  <% end %>
<%= render 'articles/article', obj: @category_articles %>

<div align="center">
  <div class="digg_pagination ">
    <div class="page_info">
      <%= page_entries_info @category_articles %>
    </div>
    <div style="padding-left: 450px;" ><%= will_paginate @category_articles, :container => false %></div>
  </div>
</div>